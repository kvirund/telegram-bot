# Telegram Joke Bot Configuration

# Bot Settings
bot:
  telegram_token: "YOUR_BOT_TOKEN_HERE"  # Get from @BotFather on Telegram
  bot_username: "@YourBotUsername"
  admin_user_ids: [123456789]  # List of admin user IDs for /reload and /comment commands

# AI Provider Configuration
ai:
  provider: "local"  # Options: groq, openrouter, local
  context_messages_count: 10
  max_retries: 3
  
  # Groq settings
  groq:
    api_key: "gsk_your_groq_api_key_here"
    model: "llama-3.2-90b-text-preview"
  
  # OpenRouter settings
  openrouter:
    api_key: "sk-or-your_openrouter_api_key_here"
    model: "openai/gpt-4o-mini"
  
  # Local API settings (vLLM, Ollama, etc.)
  local:
    api_key: "dummy"
    api_url: "http://localhost:11434/v1"
    model: "dolphin-mistral"

autonomous_commenting:
  enabled: true
  min_messages_between_comments: 8
  max_messages_between_comments: 20
  comment_probability: 0.3  # 30% chance when criteria met
  min_time_between_comments_seconds: 120
  use_intelligent_decision: true
  use_ai_decision: true  # Use AI to decide if it's a good time to comment
  
  # Message delivery
  prefer_replies: true  # Prefer replying to messages when relevant
  standalone_probability: 0.3  # 30% general observations, 70% targeted
  
  # Roasting behavior
  roasting_enabled: true
  roasting_aggression: 0.7  # 0.0 = gentle teasing, 1.0 = brutal roasting
  target_weaknesses_probability: 0.6  # 60% chance to aim at weakness vs general comment
  avoid_sensitive_topics: false  # No boundaries
  learn_from_reactions: true

user_profiling:
  enabled: true
  profile_directory: "profiles"
  max_profile_size_kb: 100
  enrichment_interval_messages: 10  # Run AI enrichment every N messages from user
  
  # What to track
  track_topics: true
  track_speaking_style: true
  track_interests: true
  track_relationships: true
  track_humor_type: true
  track_weaknesses: true
  track_mistakes: true
  track_embarrassments: true
  track_contradictions: true
  
  auto_save_interval_seconds: 300
  cross_chat_profiling: true

conversation_monitoring:
  context_window_size: 15
  language_detection: true
  uncensored_mode: true

# Reaction behavior
reaction_system:
  enabled: true
  track_reactions: true  # Track reactions to build profile insights
  add_own_reactions: true  # Bot can react to messages
  reaction_probability: 0.15  # 15% chance to react when appropriate
  min_time_between_reactions_seconds: 60
